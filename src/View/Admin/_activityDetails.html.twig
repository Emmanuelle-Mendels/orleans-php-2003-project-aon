{% if message != '' %}
    <div class="form-message">{{ message }}</div>
{% endif %}

<div class="form-container">


    <div class="form-container-left">
        <div class="form-group">
            <label class="col-form-label" for="name">Nom de l'activité</label>
            <input class="form-control" type="text" id="name" name="name" value="{{data.name}}" placeholder="Aquagym">
            <small class="errorMessage form-text text-danger">{{errors.title}}</small>
        </div>

        <div class="form-group">

            {% if not data.picture is empty %}
                <label class="col-form-label" for="picture">Illustration actuelle de l'activité :</label>
                <img class="activity-card-img" src="/assets/activityImages/{{ data.picture }}" alt="illustration de l'activité">
                <input type="hidden" name="picture" value="{{ data.picture }}">
            {% endif %}

            <label class="col-form-label" for="picture">Modifier l'illustration de l'activité :</label>
            <input type="hidden" name="MAX_FILE_SIZE" value="<?=$maxFileSize?>>" />
            <input type="file" name="picture" id="picture" />


            <small class="errorMessage form-text text-danger">{{errors.picture}}</small>
        </div>

        <div class="form-group ckbox">
            <input class="" type="checkbox" id="tbd" name="toBeDisplayed" value="1"
                    {%  if data.to_be_displayed==1 %}
                        checked
                    {% endif %}
            >
            <label class="" for="tbd">Afficher en page d'accueil </label>
        </div>
    </div>

    <div class="form-container-right">

        <div class="form-group">
            <label class="col-form-label" for="description">Description de l'activité</label>
            <textarea class="activityFormTextArea form-control" type="text" id="description" name="description">{{data.description}}</textarea>
            <small class="errorMessage form-text text-danger">{{errors.description}}</small>
        </div>

    </div>

</div>

<input type="hidden" name="id" value="{{ data.id }}">
