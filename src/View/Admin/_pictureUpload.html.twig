<input type="hidden" name="MAX_FILE_SIZE" value="1000000" />

{% if not data.picture is empty %}
    <div class="form-group">
        <label class="col-form-label" for="picture">Illustration actuelle</label>
        <div class="form-image-container">
            <div id="upload-file-info" class="small file-name-in-picture"> &nbsp; </div>
            <img class="form-image" src="/assets/{{ pictureDirectory }}/{{ data.picture }}" alt="illustration actuelle">
        </div>

        <input type="hidden" name="picture" value="{{ data.picture }}">

        <div class="custom-file">
            <input name="picture" type="file" class="custom-file-input" id="customFile" accept=".jpg,.jpeg,.gif,.png" >
            <div class="custom-file-label "  for="customFile">
                <svg class="bi bi-cloud-upload upload-icon" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4.887 6.2l-.964-.165A2.5 2.5 0 103.5 11H6v1H3.5a3.5 3.5 0 11.59-6.95 5.002 5.002 0 119.804 1.98A2.501 2.501 0 0113.5 12H10v-1h3.5a1.5 1.5 0 00.237-2.981L12.7 7.854l.216-1.028a4 4 0 10-7.843-1.587l-.185.96z"/>
                    <path fill-rule="evenodd" d="M5 8.854a.5.5 0 00.707 0L8 6.56l2.293 2.293A.5.5 0 1011 8.146L8.354 5.5a.5.5 0 00-.708 0L5 8.146a.5.5 0 000 .708z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M8 6a.5.5 0 01.5.5v8a.5.5 0 01-1 0v-8A.5.5 0 018 6z" clip-rule="evenodd"/>
                </svg>
                <div class="drag-and-drop-message small">Choississez un fichier ou déposez le ici.</div>
            </div>
        </div>

        <small class="errorMessage form-text text-danger">{{errors.picture}}</small>
    </div>

{% else %}

    <div class="form-group">

        <label class="col-form-label" for="picture">Illustration de l'activité</label>

        <div id="upload-file-info" class="small file-name-without-picture"> &nbsp; </div>

        <div class="custom-file">
            <input name="picture" type="file" class="custom-file-input" id="customFile" accept=".jpg,.jpeg,.gif,.png" >
            <div class="custom-file-label "  for="customFile">
                <svg class="bi bi-cloud-upload upload-icon" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4.887 6.2l-.964-.165A2.5 2.5 0 103.5 11H6v1H3.5a3.5 3.5 0 11.59-6.95 5.002 5.002 0 119.804 1.98A2.501 2.501 0 0113.5 12H10v-1h3.5a1.5 1.5 0 00.237-2.981L12.7 7.854l.216-1.028a4 4 0 10-7.843-1.587l-.185.96z"/>
                    <path fill-rule="evenodd" d="M5 8.854a.5.5 0 00.707 0L8 6.56l2.293 2.293A.5.5 0 1011 8.146L8.354 5.5a.5.5 0 00-.708 0L5 8.146a.5.5 0 000 .708z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M8 6a.5.5 0 01.5.5v8a.5.5 0 01-1 0v-8A.5.5 0 018 6z" clip-rule="evenodd"/>
                </svg>
                <div class="drag-and-drop-message small">Choississez un fichier ou déposez le ici.</div>
            </div>
        </div>

        <small class="errorMessage form-text text-danger">{{errors.picture}}</small>
    </div>

{% endif %}
