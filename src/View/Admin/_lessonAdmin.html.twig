
<section class="admin cookies container-fluid">
    <div class="row">
        <h2>Gestion des leçons</h2>


        <table class="table table-stripped table-hover">
            <thead class="thead-dark-price">
            <tr>
                <th>Activité</th>
                <th>Age</th>
                <th>Bassin</th>
                <th>Jour</th>
                <th>Heure</th>
                <th>Prix</th>
                <th class=" text-center table-head-small small ">Modifier</th>
                <th class=" text-center table-head-small small">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {%  for lesson in lessons %}
                <tr>
                    <td>{{ lesson.name }}</td>
                    <td>{{ lesson.age}}</td>
                    <td>{{ lesson.pool_name }}</td>
                    <td>{{ lesson.day}}</td>
                    <td>{{ lesson.time}}</td>
                    <td>{{ lesson.price}}€</td>
                    <td class=" text-center">
                        <a href="/./AdminLesson/editLesson/{{ lesson.id }}">
                            <svg class="bi bi-pencil-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.502 1.94a.5.5 0 010 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 01.707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 00-.121.196l-.805 2.414a.25.25 0 00.316.316l2.414-.805a.5.5 0 00.196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 002.5 15h11a1.5 1.5 0 001.5-1.5v-6a.5.5 0 00-1 0v6a.5.5 0 01-.5.5h-11a.5.5 0 01-.5-.5v-11a.5.5 0 01.5-.5H9a.5.5 0 000-1H2.5A1.5 1.5 0 001 2.5v11z" clip-rule="evenodd"/>
                            </svg>
                        </a>
                    </td>
                    <td class=" text-center">
                        {% set section = 'lesson-'~lesson.id %}
                        {% set id = lesson.id %}
                        <div class="container">
                            <label class="delete_icon" for="delete-{{ section }}">
                                <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/>
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/>
                                </svg>
                            </label>
                            <button type="button" class="delete_button" data-toggle="modal" data-target="#modal-{{ section }}" id="delete-{{ section }}"></button>
                            <div class="modal fade" id="modal-{{ section }}" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Êtes-vous sûr de vouloir supprimer cet élément ?</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="activity-button btn btn-primary" data-dismiss="modal">Annuler</button>
                                            <form class="delete-form" method="POST" action="/./AdminLesson/delete/">
                                                <label class="activity-button btn btn-primary" for="confirm-{{ section }}">Supprimer</label>
                                                <input class="delete_button" type="submit" name="id" value="{{ id }}" id="confirm-{{ section }}">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
    <a class="activity-button btn btn-primary btn-lg" href="/./AdminLesson/AddLesson">Ajouter une leçon</a>
</section>
