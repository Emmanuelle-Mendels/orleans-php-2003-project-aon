{% extends 'layout.html.twig' %}

{% block content %}
    <section class="activityDetails">
        Ceci est la page d'une activité.

        <h1> {{ activity.activity_name }} </h1>


        <img  class="activityPicture" src="/./assets/images/{{ activity.picture }}" alt="Activity Picture">

        <div class="lessonData">

            <p  class="lessonAge"> {{ activity.age }}</p>

            <div class="priceAndPlace">
                <div class="titleAndData">
                    <span  class="title lessonPrice">prix :</span>
                    <span  class="data lessonPrice">{{ activity.price }}€</span>
                </div>

                <div class="titleAndData">
                    <span  class="title poolTitle">bassin:</span>
                    <span  class="data poolName">{{ activity.pool_name }}</span>
                </div>
            </div>

            <div class="timetable">
                <p  class="timeTitle">Horaires:</p>
                <div class="timeList">
                    <p  class="lessonDay"> {{ activity.day }}</p>
                    <p  class="lessonTime"> {{ activity.time }}</p>
                </div>
            </div>
        </div>

        <p class="activityDescription"> {{ activity.description }} </p>

    </section>
{% endblock %}