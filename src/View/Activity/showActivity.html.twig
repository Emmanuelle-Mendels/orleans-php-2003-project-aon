{% extends 'layout.html.twig' %}

{% block content %}
    <section class="activityDetails">
        Ceci est la page d'une activité.

        <h1> {{ activity.0.activity_name }} </h1>


        <img  class="activityPicture" src="/./assets/images/{{ activity.0.picture }}" alt="Activity Picture">
        <p class="activityDescription"> {{ activity.0.description }} </p>

        <p> Informations utiles  : </p>

        <select id="ageClass">
            {% for ageClass in ageClasses %}
                <option value="{{ ageClass.age }}">{{ ageClass.age }}</option>
            {% endfor %}
        </select>

            {% for lesson in activity %}
                <div class="lessonData">

                    <p  class="lessonAge"> age :{{ lesson.age }}</p>

                    <div class="priceAndPlace">
                        <div class="titleAndData">
                            <span  class="title lessonPrice">prix :</span>
                            <span  class="data lessonPrice">{{ lesson.price }}€</span>
                        </div>

                        <div class="titleAndData">
                            <span  class="title lessonPool">bassin:</span>
                            <span  class="data lessonPool">{{ lesson.pool_name }}</span>
                        </div>
                    </div>

                    <div class="timetable">
                        <p  class="timeTitle">Horaires:</p>
                        <div class="timeList">
                            <p  class="lessonDay"> {{ lesson.day }}</p>
                            <p  class="lessonTime"> {{ lesson.time }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}


    </section>
{% endblock %}

{% block script %}

    <script>
        const ageClass = document.getElementById("ageClass");
        ageClass.addEventListener('change', event => {
            newTexture.style.backgroundImage = `url(${event.target.value})`
        });

    </script>
{% endblock %}

