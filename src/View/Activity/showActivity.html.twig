{% extends 'layout.html.twig' %}

{% block content %}
    <section class="activityDetails">

        <h1> {{ activity.name }} </h1>


        <img  class="activityPicture" src="/./assets/images/{{ activity.picture }}" alt="Activity Picture">
        <p class="activityDescription"> {{ activity.description }} </p>

        <p> Selectionnez votre catégorie  : </p>

        {% for ageClass in ageClasses %}
            <a class="activity-button btn btn-primary btn-lg" href="/./activity/showActivity/{{ activity.id }}/{{ ageClass.id }}" >{{ ageClass.age }}</a>
        {% endfor %}

        <p> Informations utiles  : </p>

        {% for ageClass in lessonsByAgeClass %}
        <div class="lessonData ageClass{{ageClass.0.age_id }}">



                    <p  class="lessonAge"> age :{{ ageClass.0.age }}</p>

                    <div class="priceAndPlace">
                        <div class="titleAndData">
                            <span  class="title lessonPrice">prix :</span>
                            <span  class="data lessonPrice">{{ ageClass.0.price }}€</span>
                        </div>

                        <div class="titleAndData">
                            <span  class="title lessonPool">bassin:</span>
                            <span  class="data lessonPool">{{ ageClass.0.pool_name }}</span>
                        </div>
                    </div>

                    <div class="timetable">
                        <p  class="timeTitle">Horaires:</p>
                        {% for lesson in ageClass %}
                        <div class="timeList">
                            <p  class="lessonDay"> {{ lesson.day }}</p>
                            <p  class="lessonTime"> {{ lesson.time }}</p>
                        </div>
                        {% endfor %}
                    </div>


        </div>
        {% endfor %}

    </section>
{% endblock %}

