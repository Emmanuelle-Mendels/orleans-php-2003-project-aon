{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="titleWhoAreUs">Edit Qui sommes nous</h1>
<section class="WAU-form">

    {% if message != '' %}
        <div class="form-message-WAU">{{ message }}</div>
    {% endif %}

    <form class="WAU-form" method="post" action="/./adminWhoAreUs/editWhoAreUs" enctype="multipart/form-data">

        {% if not whoAreUs.picture is empty %}
            <label class="col-form-label" for="picture">Illustration actuelle </label>
            <img class="WAU-card-img" src="/assets/activityImages/{{ whoAreUs.picture }}" alt="illustration">
            <input class="actualPicture" type="hidden" name="picture" value="{{ whoAreUs.picture }}">
        {% endif %}

        <label class="col-form-label" for="description">Description actuelle </label>
        <textarea class="WAUdescription" name="description">{{ whoAreUs.description }}</textarea>
        <small class="errorMessage form-text text-danger">{{ errors.description }}</small>
        <input type="file" name="picture">
        <small class="forminput form-text text-danger">{{ errors.picture }}</small>

        <div class="form-button-pannel">
            <a class="activity-button btn btn-primary" href="/./Admin/index">Retour</a>
            <input class="activity-button btn btn-primary" type="submit" name="action" value="ValidÃ©">
        </div>
    </form>
</section>
{% endblock  %}
